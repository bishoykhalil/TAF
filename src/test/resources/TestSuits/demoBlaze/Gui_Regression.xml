<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Demo Blaze - Regression suite">
  <test name="Demo Blaze - Register and login">
    <classes>
      <class name="demoBlaze.tests.Gui_CreateUserAndAddProducts"/>
    </classes>
  </test>
  <test name="Demo Blaze - Check the listed Categories has Items">
    <parameter name="CheckItems" value="true"/>
    <classes>
      <class name="demoBlaze.tests.Gui_CreateUserAndAddProducts"/>
    </classes>
  </test>
  <test name="Demo Blaze - Add random item to the cart">
    <parameter name="AddItem" value="true"/>
    <classes>
      <class name="demoBlaze.tests.Gui_CreateUserAndAddProducts"/>
    </classes>
  </test>
  <test name="Demo Blaze - Complete successful checkout with random item">
    <parameter name="CheckItems" value="true"/>
    <parameter name="AddItem" value="true"/>
    <parameter name="CheckOut" value="true"/>
    <classes>
      <class name="demoBlaze.tests.Gui_CreateUserAndAddProducts"/>
    </classes>
  </test>
  <test name="Demo Blaze - Remove item from cart ">
    <parameter name="AddItem" value="true"/>
    <parameter name="RemoveItem" value="true"/>
    <classes>
      <class name="demoBlaze.tests.Gui_CreateUserAndAddProducts"/>
    </classes>
  </test>
</suite>
